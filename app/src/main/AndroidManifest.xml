<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.mimo31.thedecomposegame"
    android:versionCode="2"
    android:versionName="1.1">

    <application
        android:name="com.github.mimo31.thedecomposegame.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PlayActivity" android:parentActivityName=".StartActivity" ></activity>
        <activity android:name=".ChooseLevelActivity" android:parentActivityName=".StartActivity" android:hardwareAccelerated="false" />
        <activity android:name=".HelpActivity" android:parentActivityName=".StartActivity" />
    </application>

</manifest>
